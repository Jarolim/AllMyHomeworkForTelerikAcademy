@model List<MoviesApp.Models.Movie>

<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Title            </th>
            <th>Director            </th>
            <th>Year            </th>
            <th>Lead Actor            </th>
            <th>Lead Actress            </th>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Html.ActionLink(Model[i].Title, "GetMovie", "Movie", new { id = Model[i].Id }, null)</td>
            <td>@Model[i].Director</td>
            <td>@Model[i].Year</td>
            @if (Model[i].LeadMaleActor != null)
            {
            <td>@Model[i].LeadMaleActor.Name</td>
            }
            @if (Model[i].LeadFemaleActor != null)
            {
            <td>@Model[i].LeadFemaleActor.Name</td>
            }
        </tr>
    }

</table>

